
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bradcam_area bradcam_bg_2" style="background-image:url(/img/banner/bradcam2.png)">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="bradcam_text text-center">
                    <h3>WELCOME TO TRAVELO!</h3>
                    <p>Let's start a new Journey</p>
                </div>
            </div>
        </div>
    </div>
