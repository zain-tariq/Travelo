                        <div class="input_field">
                            <input type="text" style="color:black" placeholder="From (Current City)" name="from">
                        </div>   
                        <div class="search_btn">
                            <button class="boxed-btn4 " type="submit">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
