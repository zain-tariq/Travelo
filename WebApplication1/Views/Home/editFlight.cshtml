@model WebApplication1.Models.flightDetails

@{
    ViewBag.Title = "editFlight";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        <h1 style="text-align:center ;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif" ">ENTER FLIGHT DETAILS</h1><br><br>
        <form class="form-horizontal" action="update">
            <div class="form-group">
                <label class="control-label col-sm-2">Destination:</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" value ="@Model.Destination" name ="Destination">
                </div>
                <label class="control-label col-sm-2">Departure:</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" value ="@Model.Departure" name="Departure">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Time:</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" value ="@Model.Time" name="Time">
                </div>
                <label class="control-label col-sm-2">Airline:</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" value ="@Model.Airline" name="Airline">
                </div>
            </div>

            <div class="form-group">

                <label class="control-label col-sm-2">Date:</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" value ="@Model.Date" name="Date">
                    <input type="hidden" name="id" value="@Model.Id">
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-sm-2">Seats Available:</label>
                <div class="col-sm-3" style ="margin-right:-180px">
                    <p style="font-size:small">Economy </p>
                    <input style ="margin-top:-10px; width:52px" type="text" class="form-control" name="eSeats" value="@Model.eSeatsAvailable">
                </div>
                <div class="col-sm-3" >
                    <p style="font-size:small">Business </p>
                    <input style ="margin-top:-10px; width:52px" type="text" class="form-control" name="bSeats" value="@Model.bSeatsAvailable">
                </div>
            </div>

            <div class="form-group" style="margin-top:50px; margin-left:340px">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="boxed-btn4 ">SUBMIT CHANGES</button>
                </div>
            </div>
        </form>
    </div>

</body>
</html>